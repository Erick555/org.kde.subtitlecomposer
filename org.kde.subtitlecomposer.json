{
	"command": "subtitlecomposer",
	"finish-args": [
		"--share=ipc",
		"--device=dri",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--socket=pulseaudio"
	],
	"id": "org.kde.subtitlecomposer",
	"runtime": "org.kde.Platform",
	"runtime-version": "5.15",
	"sdk": "org.kde.Sdk",
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/share/pkgconfig",
		"/share/aclocal",
		"/man",
		"/share/man"
	],
	"branch": "stable",
	"modules": [
		{
			"buildsystem": "autotools",
			"name": "SphinxBase",
			"config-opts": [
				"--without-python"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/cmusphinx/sphinxbase.git"
				}
			]
		},
		{
			"buildsystem": "autotools",
			"name": "PocketSphinx",
			"config-opts": [
				"--without-python"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/cmusphinx/pocketsphinx.git"
				}
			]
		},
		{
			"buildsystem": "cmake-ninja",
			"name": "kross",
			"sources": [
				{
					"branch": "v5.75.0",
					"type": "git",
					"url": "https://invent.kde.org/frameworks/kross.git"
				}
			]
		},
		{
			"buildsystem": "cmake-ninja",
			"name": "subtitlecomposer",
			"config-opts": [
				"-DBUILD_TESTING=OFF"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://invent.kde.org/multimedia/subtitlecomposer.git",
					"tag": "v0.7.1",
					"commit": "212ecfcca02737e31c0429e55810280e060965f9"
				}
			]
		}
	]
}
