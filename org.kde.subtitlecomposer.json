{
    "id": "org.kde.subtitlecomposer",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "sdk": "org.kde.Sdk",
    "command": "subtitlecomposer",
    "finish-args": [
        "--share=ipc",
        "--device=dri",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=host"
    ],
    "cleanup": [
        "*.la",
        "*.a",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/mkspecs",
        "/share/pkgconfig",
        "/share/aclocal",
        "/share/info",
        "/man",
        "/share/man"
    ],
    "rename-icon": "subtitlecomposer",
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "23.08",
            "add-ld-path": "."
        }
    },
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ],
    "modules": [
        {
            "name": "SphinxBase",
            "buildsystem": "autotools",
            "config-opts": [
                "--without-python"
            ],
            "cleanup": [
                "/share/sphinxbase"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/cmusphinx/sphinxbase.git",
                    "commit": "9e901850ee4cd1c0b22f2d3b3c15f162564ca283"
                }
            ]
        },
        {
            "name": "PocketSphinx",
            "buildsystem": "autotools",
            "config-opts": [
                "--without-python"
            ],
            "cleanup": [
                "/share/pocketsphinx"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/cmusphinx/pocketsphinx.git",
                    "commit": "588ab6371a1e1c94c10d4ad772b0c4732e1905e6"
                }
            ]
        },
        {
            "buildsystem": "cmake-ninja",
            "name": "subtitlecomposer",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/subtitlecomposer/subtitlecomposer-0.8.0.tar.xz",
                    "sha256": "b1416bdf7223b1979a36620b913c117c1b6c933bf165e28491af476310d7c9f8",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242855,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/subtitlecomposer/subtitlecomposer-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "paths": [
                        "patches/0001-Fixed-invalid-memory-read.patch",
                        "patches/0002-Fixed-crash-when-closing-subtitle.patch",
                        "patches/0003-Fix-crashes-on-empty-lines-list.patch",
                        "patches/0004-Removed-QSharedData-instances-from-stack.patch",
                        "patches/0005-Fixed-memory-leaks.patch",
                        "patches/0006-LinesItemDelegate-fix-inline-rich-editor-crash.patch",
                        "patches/0007-Fix-compilation-with-ffmpeg5-63.patch",
                        "patches/0008-VideoPlayer-Fix-usage-of-deprecated-removed-AVCodec-.patch",
                        "patches/0009-Replaced-Kross-with-QJSEngine.patch",
                        "patches/0010-Organized-Tools-menu-scripts.patch",
                        "patches/0011-Improved-script-manager.patch",
                        "patches/0012-SciptManager-fixed-wrong-filename-title-use.patch",
                        "patches/0013-newer-ffmpeg.patch"
                    ]
                }
            ]
        }
    ]
}
